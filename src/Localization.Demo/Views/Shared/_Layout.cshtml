<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><localize>@ViewData["Title"]</localize> - <localize>Localization Demo</localize></title>

  <environment names="Development">
    <link rel="stylesheet" href="~/lib/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
  </environment>
  <environment names="Staging,Production">
    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/4.1.3/css/bootstrap.min.css"
          asp-fallback-href="~/lib/css/bootstrap.min.css"
          asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
  </environment>
</head>
<body>

  <div class="navbar navbar-dark bg-dark fixed-top navbar-expand-md">
      <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand" localize="">Localization Demo</a>
      <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="navbar-toggler-icon"></span>
        <span class="sr-only" localize="">Toggle navigation</span>
      </button>

      <div class="navbar-collapse collapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Index" localize="" class="nav-link">Home</a></li>
          <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="About" localize="" class="nav-link">About</a></li>
          <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Contact" localize="" class="nav-link">Contact</a></li>
          <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Error" localize="" class="nav-link">Error</a></li>
        </ul>@await Html.PartialAsync("_ChangeLanguage")
      </div>
  </div>
  <div class="container-fluid body-content">
    @RenderBody()
  </div>
  <footer class="footer container-fluid bg-dark text-center">
    <span class="text-muted" localize="">2016-2019 - Localization Demo</span>
  </footer>

  <environment names="Development">
    <script src="~/lib/js/jquery.js"></script>
    <script src="~/lib/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
  </environment>
  <environment names="Staging,Production">
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.2.1.min.js"
            asp-fallback-src="~/lib/js/jquery.min.js"
            asp-fallback-test="window.jQuery">
    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/4.1.3/bootstrap.min.js"
            asp-fallback-src="~/lib/js/bootstrap.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
    </script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
  </environment>
  @RenderSection("scripts", required:false)
</body>
</html>
